				sleep(time:3,unit:'SECONDS');
			}
		}
		
		stage("Stage 5") {
			  agent none
			  steps {
				checkpoint 'CQ Scan Completed'
				sleep(time:3,unit:'SECONDS');
			  }
		}
	
		stage('Stage 6') {
			agent {
				label 'Linux-Slave'
			}
