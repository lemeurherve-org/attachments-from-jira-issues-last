pipeline {
    agent none
	
	options {
		skipDefaultCheckout true
	}
	
    stages {
		stage('Stage 1') {
			agent {
				label 'Linux-Slave'
			}
			steps {
                sh 'echo "hello"'
                sleep(time:3,unit:'SECONDS');
			}	
		}
		
        stage('Stage 2') {
			agent {
