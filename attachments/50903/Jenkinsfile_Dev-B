pipeline {
	agent any
	options { skipDefaultCheckout() }
	triggers { p4Trigger() }
	stages {

		stage('Sync') {


			steps {
checkout perforce(credential: 'Master', populate: autoClean(delete: true, modtime: false, parallel: [enable: false, minbytes: '1024', minfiles: '1', threads: '4'], pin: '', quiet: true, replace: true, tidy: false), workspace: streamSpec(charset: 'none', format: 'jenkins-${NODE_NAME}-${JOB_NAME}-${EXECUTOR_NUMBER}', pinHost: false, streamName: '//stream/Dev-B'))
}
} 
stage('Verify_File') {
steps{
sh 'ls -la'
}
}
stage('Verify_Content') {
steps{
sh 'cat *.txt'
sh 'echo cleanup true'
}
}
}
post {
always {
cleanup(true)
}
}
}

